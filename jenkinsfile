pipeline {
    agent any

    stages {
		stage('Build') {
            steps{
                sh 'git clone -branch Staging https://github.com/eloymillan/dockerbluegreen.git'
                sh 'ls -lha .'
            }
        }
	    stage('Run Tests') {
	    	parallel {
		    	stage('Test On Windows') {
				    steps {
    					echo "windows"
				    }
			    }
			    stage('Test On Linux') {
    				steps {
					    echo "Linux"
				    }
			    }
		    }
        }
        stage('Deploy in UAT'){
            steps{
                echo "deploying in UAT STEP1"
                echo "deploying in UAT STEP2"
            }
        }
        stage('Deploy in Staging'){
            steps{
                 input "ACCEPT DEPLOY IN STAGGING"
                echo "deploying in Stagging STEP1"
                echo "deploying in Stagging STEP2"
            }
        }
        stage('Deploy in Production'){
            steps{
                input "ACCEPT DEPLOY IN PRODUCTION"
                echo "deploying in Production STEP1"
                echo "deploying in Production STEP2"
            }
        }
    }
}