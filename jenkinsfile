pipeline {
    agent any

    stages {
		stage('Build') {
            steps{
                echo "building"
            }
        }
	    stage('Run Tests') {
	    	parallel {
		    	stage('Test On Windows') {
				    steps {
    					echo "windows"
				    }
			    }
			    stage('Test On Linux') {
    				steps {
					    echo "Linux"
				    }
			    }
		    }
        }
        stage('Deploy in UAT'){
            steps{
                echo "deploying in UAT STEP1"
            }
            steps{
                echo "deploying in UAT STEP1"
            }
        }
        stage('Deploy in Stagging'){
            steps{
                echo "deploying in Stagging STEP1"
            }
            steps{
                echo "deploying in Stagging STEP1"
            }
        }
        stage('Deploy in Production'){
            steps{
                echo "deploying in Production STEP1"
            }
            steps{
                echo "deploying in Production STEP1"
            }
        }

    }
}