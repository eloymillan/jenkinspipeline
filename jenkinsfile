pipeline {
    agent any

    stages {
		stage('Build') {
            steps{
                sh 'hostname'
            }
        }
	    stage('Run Tests in master') {
	    	parallel {
		    	stage('Test Paralell1') {
				    steps {
    					echo "Paralell1"
                        sh 'hostname'
				    }
			    }
			    stage('Test Paralell2') {
    				steps {
					    echo "Paralell2"
                        sh 'hostname'
				    }
			    }
		    }
        }
        stage('Testing in remote nodes'){
              agent {label 'Linuxservers'}
            steps{
                echo "deploying in nodes"
                sh 'hostname'
            }
        }
    }
}